<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryMain</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMain</item>
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLogin</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLogin</item>
    </style>

    <style name="AddRoutineActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRoutine</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRoutine</item>
        <item name="colorAccent">@color/colorAccentRoutine</item>
    </style>

    <style name="WorkoutActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWorkout</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWorkout</item>
        <item name="colorAccent">@color/colorAccentWorkout</item>
    </style>

    <style name="WorkoutAndCardioTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWorkoutAndCardio</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWorkoutAndCardio</item>
        <item name="colorAccent">@color/colorAccentWorkoutAndCardio</item>
    </style>


</resources>
