<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/login_background"
             tools:context="com.app.ivonneortega.myfitnessapp.my.app.ivonneortega.myfitnessapp.AddUserInformation.AddUserInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your information"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccentLogin"
            android:padding="20dp"
            android:backgroundTint="@android:color/white"
            android:hint="Name"
            android:textColor="@android:color/black"
            android:textColorHint="#787878"/>

        <EditText
            android:id="@+id/user_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:hint="Last name"
            android:textColor="@android:color/black"
            android:textColorHint="#787878"/>

        <EditText
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:hint="Age"
            android:textColor="@android:color/black"
            android:textColorHint="#787878"/>

        <EditText
            android:id="@+id/user_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:background="@android:color/white"
            android:padding="20dp"
            android:backgroundTint="@android:color/white"
            android:hint="Weight"
            android:textColor="@android:color/black"
            android:textColorHint="#787878"/>

        <EditText
            android:id="@+id/user_weight_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccentLogin"
            android:padding="20dp"
            android:inputType="numberDecimal"
            android:backgroundTint="@android:color/white"
            android:hint="Weight goal"
            android:textColor="@android:color/black"
            android:textColorHint="#787878"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="done"
            android:id="@+id/done"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimaryDarkLogin"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|center_horizontal"/>


    </LinearLayout>


</FrameLayout>
