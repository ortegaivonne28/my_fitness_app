<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ivonneortega.myfitnessapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/titleWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="WATER"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/titleWater"
            android:layout_marginTop="6dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:layout_marginTop="10dp"
            android:id="@+id/waterglasses"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/glass1"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:src="@drawable/glass_add"/>

            <ImageView
                android:id="@+id/glass2"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass1"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass3"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass2"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass4"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass3"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass5"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass4"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass6"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_below="@id/glass1"
                android:layout_marginTop="10dp"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass7"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_alignTop="@id/glass6"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass6"
                android:src="@drawable/glass_empty"/>

            <ImageView
                android:id="@+id/glass8"
                android:layout_width="58dp"
                android:layout_height="68dp"
                android:layout_alignTop="@id/glass7"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/glass7"
                android:src="@drawable/glass_empty"/>


        </RelativeLayout>
        <ImageView
            android:id="@+id/dividerWater2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/waterglasses"
            android:layout_marginTop="10dp"
            android:alpha="0.2"
            android:visibility="gone"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerWater2"
            android:layout_marginTop="10dp"
            android:text="God job!!"
            android:id="@+id/water_completed_text"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="WORKOUT"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/workout_title"
            android:layout_marginTop="6dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/weight_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/weight_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/weight_icon"
            android:text="You don't have any workout for today!"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/cardio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CARDIO"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cardio_title"
            android:layout_marginTop="6dp"
            android:alpha="0.3"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/cardio_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/cardio_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/cardio_icon"
            android:text="You don't have any cardio for today!"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/challenges_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CHALLENGES"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/challenges_title"
            android:layout_marginTop="6dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/challenges_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/medal_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/challenges_icon"
            android:text="You don't have any challenge"/>


    </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
